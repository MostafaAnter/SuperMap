<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Simple Map"
            android:onClick="simpleMap"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Map View"
            android:onClick="mapView"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Referance To the Map"
            android:onClick="referanceMap"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Initial State Xml"
            android:onClick="intialState"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Initial State Code"
            android:onClick="intialStateJava"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Using Geo Coding"
            android:onClick="usingGeoCode"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Change MapType RunTime"
            android:onClick="changMap"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selectable_background"
            android:gravity="center"
            android:text="Save State"
            android:onClick="saveState"/>

    </LinearLayout>

</ScrollView>
